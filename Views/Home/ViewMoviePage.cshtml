<table class="table table-bordered table-striped table-light">
    <thread class="font-weight-bolder">
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thread>

    <tbody>
        @foreach (Responses x in Model)
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Category</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-movieforumid="@x.MovieForumId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-movieforumid="@x.MovieForumId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

